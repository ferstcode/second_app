<h1>List of students</h1>
<table class='table table-hover'>
  <thead>
    <tr class='table-active'>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class='table-active'>
        <td><%= student.name %></td>
        <td><%= student.email.present? ?  student.email : 'N/A'%></td>
     </tr>
    <% end %>
  </tbody>
</table>
